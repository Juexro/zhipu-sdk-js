{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./lib",
    "sourceMap": false,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "lib"]
}